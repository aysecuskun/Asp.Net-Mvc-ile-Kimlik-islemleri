@using Entities

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kimlik Randevu Sistemine Hoşgeldiniz</title>
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Dancing+Script:400,700&display=swap" rel="stylesheet">
    <link href="~/Content/jquery-ui.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css.css" rel="stylesheet" />


</head>

<body>
    @{
        User user = null;
        if (Session["login"] != null)
        {
            user = Session["login"] as User;
        }
    }
    <nav>
        <div class="container clearfix">
            <div id="logo-box">
                <h6 class="logo">T.C RANDEVU SİSTEMİ </h6>
            </div>

            <div id="nav-links">
                <ul class="nav navbar-nav navbar-right">
                    @if (user == null)
                    {
                        <li>
                            <a href="/Home/Login" class="nav-link" style="font-size:20px;">
                                <span class="glyphicon glyphicon-log-in"></span>
                                Kullanıcı Girişi
                            </a>

                        </li>
                    }

                    else
                    {
                        <li class="dropdown">
                            <a href="/" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <span class="glyphicon glyphicon-user"></span>@user.Name @user.Surname
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    @Bootstrap.LinkMenu("/Home/Anasayfam", "user", " Anasayfa")
                                </li>
                                <li>
                                    @Bootstrap.LinkMenu("/Home/ShowProfil", "user", " Profili Göster")
                                </li>

                            </ul>
                        </li>
                        <li>
                            <a href="/Home/Logout"><span class="glyphicon glyphicon-log-out"></span>Çıkış Yap</a>
                        </li>
                    }

                </ul>
            </div>


        </div>
    </nav>



    @*<ul class="nav navbar-nav navbar-right">

        </ul>*@
    @RenderBody()
      <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
  
    <script>
        $(document).ready(function () {
            $("#Ilid").change(function () {

                $.get("/Randevu/GetStateList", { id: $("#Ilid").val() }, function (data) {
                    $("#Ilceid").empty();
                    $.each(data, function (index, row) {
                        $("#Ilceid").append("<option value='" + row.Id + "'>" + row.İlceAdi + "</option>")
                    });
                });
            })
            $("Ilceid").change(function () {

                $.get("/Randevu/GetSaatList", { Ilceid: $("#Ilceid").val() , RandevuGunu: $("#RandevuGun").val() }, function (data) {
                    $("#SaatId").empty();
                    $.each(data, function (index, row) {
                        $("#SaatId").append("<option value='" + row.Id + "'>" + row.Saatler + "</option>")
                    });
                });
            })
        });

    </script>



</body>
</html>