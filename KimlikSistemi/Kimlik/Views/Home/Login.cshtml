@using Entities.ModelView
@model UserLoginModel
@{
    ViewBag.Title = "Login";
}
<link href="~/Content/Logincss.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css?family=Dancing+Script:400,700&display=swap" rel="stylesheet">
@using (Html.BeginForm())
{
    <section>
        <div class="container">
            <div class="login-form">
                <div class="main-div">
                    <div class="form-heading">
                        <h1 class="form-heading" style="font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif">KULLANICI GİRİŞİ</h1>
                    </div>

                    <form id="Login">
                        <div class="form-group">
                            @Html.ValidationSummary(false)
                            @Html.TextBoxFor(model => model.TCKimlik, new { @class = "form-control", placeholder = "TC Kimlik Numaranız" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.DogumTarihi, new { @class = "form-control", placeholder = "Doğum Tarihiniz" })

                        </div>

                        <button type="submit" class="btn btn-primary" style="font-size:20px;font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif">Giriş</button>
                    </form>
                </div>

            </div>
        </div>

    </section>
}




